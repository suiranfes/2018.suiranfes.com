  block i18n
    -
      function i18n(target, strs){
        const text = !!site.i18n[target] ? (site.i18n[target][locale] || site.i18n[target].ja || target) : target
        let res = text
        if (strs && strs.length > 0) {
          for (i = 0; i < strs.length; i++){
            res = res.replace(`%${i}`, strs[0])
          }
        }
        return res
      }

